<style>
  .blocks-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
  }

  .blocks-item {
    background-color: transparent;
   border:none;
    
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    aspect-ratio: 1 / 1;
    transition: all 0.3s ease;
  }

  .blocks-item-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    text-decoration: none;
    color: inherit;
  }

  .blocks-item-icon {
    width: 64px;
    height: 64px;
    margin-bottom: 15px;
    transition: transform 0.3s ease;
  }

  .blocks-item-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .blocks-item-title {
    font-size: 16px;
    font-weight: bold;
    padding: 5px 10px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
    color:$brand_color_midblue;
  }

  .blocks-item:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .blocks-item:hover .blocks-item-icon {
    transform: translateY(-5px);
  }

  .blocks-item:hover .blocks-item-title {
    background-color: $brand_color_lightblue;
  }
</style>
