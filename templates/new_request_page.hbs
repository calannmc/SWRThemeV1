<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit a Request</title>
    <style>
        /* Breadcrumbs styling */
        .breadcrumbs {
            padding: 40px;
        }

        /* Default Styles */
        .section.hero-contact {
            background-color: #000;
            color: #fff;
        }

        /* Form Container Styles */
        .form {
            background-color: #000; /* Black background */
            color: #fff; /* White text color for contrast */
            padding: 40px; /* Increased padding around the form */
            border-radius: 8px; /* Optional: rounded corners */
        }

        /* Apply white text specifically to form titles */
        .form h1, .form h2, .form h3, .form label {
            color: #fff;
        }

        /* Specific Styles for Form ID 15525136863132 */
        .form-15525136863132 .section.hero-contact {
            background-color: #dff0d8;
            color: #3c763d;
        }

        /* Specific Styles for Form ID 15525177480220 */
        .form-15525177480220 .section.hero-contact {
            background-color: #f2dede;
            color: #a94442;
        }

        /* Specific Styles for Form ID 15525228238620 */
        .form-15525228238620 .section.hero-contact {
            background-color: #d9edf7;
            color: #31708f;
        }
    </style>
</head>
<body>

    {{breadcrumbs}}

    <section id="main-content" class="section hero-contact">
        <div class="hero-inner">
            <h1 class="intro-title-contact">{{t 'submit_a_request'}}</h1>
            <h2 class="visibility-hidden">{{ t 'search' }}</h2>
        </div>
    </section>

    <div class="container-divider"></div>

    <div class="container">
        <div class="sub-nav"></div>
        <div id="main-content" class="form">
            <div id="new-request-form"></div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const params = new URLSearchParams(window.location.search);
            const ticketFormId = params.get('ticket_form_id');

            if (ticketFormId) {
                const heroElement = document.querySelector('.hero-contact');
                const formElement = document.querySelector('.form');

                let formTitle = ''; // Default title or a specific title based on the form ID
                switch(ticketFormId) {
                    case '15525136863132':
                        formTitle = 'Price Promise Request';
                        heroElement.style.backgroundColor = '#0092CB';
                        heroElement.style.color = '#3c763d';
                        break;
                    case '15525177480220':
                        formTitle = 'Claim for Taxi or Hotel';
                        heroElement.style.backgroundColor = '#f2dede';
                        heroElement.style.color = '#000';
                    case '15525228238620':
                        formTitle = 'Claiming During Disruption';
                        heroElement.style.backgroundColor = '#061b2b';
                        heroElement.style.color = '#fff';
                        break;
                    default:
                        formTitle = 'Submit a Request';
                        heroElement.style.backgroundColor = '#000';
                        heroElement.style.color = '#fff';
                        break;
                }
                
                // Apply the title to the hero section
                document.querySelector('.intro-title-contact').innerText = formTitle;

                // Apply styles to the form container
                formElement.style.backgroundColor = '#000'; // Ensure the background is black
                formElement.style.color = '#fff'; // Ensure the text is white
                formElement.style.padding = '40px'; // Increase padding
                formElement.style.borderRadius = '8px'; // Optional: rounded corners
            }
        });
    </script>

    <script type="module">
        import { renderNewRequestForm } from "new-request-form";

        const container = document.getElementById("new-request-form");

        const settings = {{json settings}};

        const props = {
            requestForm: {{json new_request_form}},
            newRequestPath: {{json (page_path 'new_request')}},
            parentId: {{json parent.id}},
            parentIdPath: {{json parent.url}},
            locale: {{json help_center.locale}},
            baseLocale: {{json help_center.base_locale}},
            hasAtMentions: {{json help_center.at_mentions_enabled}},
            userRole: {{json user.role}},
            brandId: {{json brand.id}},
            wysiwyg: true,
            answerBotModal: {
                answerBot: {{json answer_bot}},
                hasRequestManagement: {{json help_center.request_management_enabled}},
                isSignedIn: {{json signed_in}},
                helpCenterPath: {{json (page_path 'help_center')}},
                requestsPath: {{json (page_path 'requests')}},
                requestPath: {{json (page_path 'request' id=answer_bot.request_id)}}
            },
        };

        renderNewRequestForm(settings, props, container);
    </script>

</body>
</html>
